{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "bun run generate-rss && next build",
    "generate-rss": "bun scripts/generate-rss.ts",
    "start": "next start",
